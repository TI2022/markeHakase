
<%= form_with(model: @item, local: true) do |f| %>
 <%#= render partial: 'shared/error_messages', locals: { object: @item } %>
  <table class="table item-table">
      <tr>
        <td rowspan="3" class="center">
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, id: :item_img %>

            <% if @item.image.present? %>
              <%= image_tag @item.image.url, size: "300", class: "item-image-border", id: :img_prev %>
            <% else %>
              <%= image_tag "/no_image2.png", size: "300", class: "item-image-border", id: :img_prev %>
            <% end %>

            <script type="text/javascript">
              $(function() {
                function readURL(input) {
                    if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                $('#img_prev').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                    }
                }
                $("#item_img").change(function(){
                    readURL(this);
                });
              });
            </script>

          </div>
        </td>
        <td colspan="2">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class: "form-control" %>
          </div>
        </td>
        <td>
          <div class="form-group">
            <%= f.label :stock %>
            <%= f.number_field :stock, class: "form-control" %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
        </td>
      </tr>
  </table>
  <div class="form-group">
    <%= f.submit "商品登録", class: "btn btn-md btn-primary" %>
    <%= link_to 'キャンセル', items_path, class: "link-gray" %>
  </div>

<% end %>
