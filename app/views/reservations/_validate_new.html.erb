<% now = Time.zone.now %>
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">予約制限作成</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body reservation-form">
      <%= form_with(model: @reservation, url: validate_create_reservations_path, method: :post) do |f| %>
        <h5 class="pl-2 my-3 required">制限開始日時</h5>
        <div class="card display-block bg-light p-3">
          <%= f.datetime_field :start_time, value: Time.current.strftime('%Y-%m-%dT11:00:00'), class: "form-control" %>
        </div>
        <h5 class="pl-2 my-3 required">制限終了日時</h5>
        <div class="card display-block bg-light p-3">
          <%= f.datetime_field :end_time, value: Time.current.strftime('%Y-%m-%dT11:00:00'), class: "form-control" %>
        </div>

        <div class="error-wrap">
          <div class="mt-4" id="error"></div>
        </div>

        <%= f.hidden_field :reservation_time, :value => now %>
        <%= f.hidden_field :guest_id, :value => "1" %>
        <%= f.hidden_field :staff_id, :value => "1" %>

        <div class="center my-4">
          <%= f.submit "予約制限作成", class: "btn btn-primary", id: "submit" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            キャンセル
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
