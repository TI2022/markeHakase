<p>
  <%= link_to 'ホーム', root_url, class: "link-gray" %> ＞ 
  <%= link_to '予約画面', reservations_path, 'data-turbolinks': false, class: "link-gray" %> ＞ 
  予約情報詳細
</p>
<table class="table table-white table-bordered mt-4">
  <thead class="table-secondary">
    <tr>
      <th scope="col">お名前</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.guest.name %>様</td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">予約日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= l @reservation.start_time, format: :dayonly %></td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">予約時間</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% if @reservation.topping_menu.present? %>
      <td><%= l @reservation.start_time, format: :timeonly %> - <%= l (@reservation.start_time + ((@reservation.treatment_time_menu + 30) * 60)), format: :timeonly if @reservation.end_time.present? %></td>
    <% else %>
      <td><%= l @reservation.start_time, format: :timeonly %> - <%= l (@reservation.start_time + (@reservation.treatment_time_menu * 60)), format: :timeonly if @reservation.end_time.present? %></td>
    <% end %>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">コース名</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.treatment_menu %></td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">巻き爪補正</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.add_nail_count_menu ? @reservation.add_nail_count_menu : "0" %>本</td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">トッピング</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.topping_menu ? @reservation.topping_menu : "無し" %></td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">料金</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.full_charge_menu %>円</td>
    </tr>
  </tbody>
  <thead class="table-secondary">
    <tr>
      <th scope="col">現在の予約状態</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @reservation.status_i18n %></td>
    </tr>
  </tbody>
</table>
<div class="center">
  <%= link_to '予約画面へ戻る', reservations_path, 'data-turbolinks': false, class: "btn btn-secondary" %>
</div>
