<p class="mt-2">
  <%= link_to 'ホーム', root_url, class: "link-gray" %> ＞
  お知らせ一覧
</p>
<div class="container">
  <div class="notification-image bg-info d-flex align-items-center justify-content-center">
    <span>お知らせ</span>
  </div>

  <div class="notification-body">
    <% @notifications.each do |n| %>
      <ul>
        <li><%= n.created_at.strftime("%Y.%m.%d") %></li>
        <li><%= link_to n.title, notification_path(n), class: "Editlink" %></li>
      </ul><hr>
    <% end %>
  </div>
  <%= paginate(@notifications) %>
  <div class="text-center">
    <%= link_to "トップへ", root_path, class: "btn btn-lg btn-outline-secondary mt-1" %>
  </div>
</div>
