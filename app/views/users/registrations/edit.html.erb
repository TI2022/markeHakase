<div class="container-login">
  <h1 class="center">お客様情報の編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <span class="required"><%= f.label :name %></span><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "山田太郎" %>
    </div>

    <div class="field">
      <%= f.label :kana %><br />
      <%= f.text_field :kana, autocomplete: "kana", class: "form-control", placeholder: "やまだたろう" %>
    </div>

    <div class="field">
      <span class="required"><%= f.label :email %></span><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "email@eamil.com" %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autocomplete: "phone", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday, autocomplete: "birthday", start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :sex %><br />
      <%= f.label :male  %>
      <%= f.radio_button :sex, :male %>&emsp;
      <%= f.label :female  %>
      <%= f.radio_button :sex, :female %>&emsp;
      <%= f.label :no_select  %>
      <%= f.radio_button :sex, :no_select %>
    </div><br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(変更する場合は入力してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上入力してください" %>
      <% if @minimum_password_length %>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %> <i>(変更する場合は入力してください)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上入力してください" %>
    </div>

    <div class="field">
      <%= f.label :postal_code %><br>
      <%= f.text_field :postal_code, class: "form-control", placeholder: "ハイフンなし" %>
    </div>

    <div class="field">
      <%= f.label :prefecture_code %><br>
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: "form-control", placeholder: "必須" %>
    </div>

    <div class="field">
      <%= f.label :street %><br>
      <%= f.text_field :street, class: "form-control", placeholder: "必要な場合入力してください" %>
    </div>
    <div class="field">
      <%= f.label :other_address %><br>
      <%= f.text_field :other_address, class: "form-control", placeholder: "必要な場合入力してください" %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "変更を完了させたい場合は入力してください" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to "退会する", quit_users_path,class: "btn btn-danger btn-block"%>
    <%#= link_to 'アカウント削除', registration_path(resource_name), data: {confirm: t('本当によろしいですか？')}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>
